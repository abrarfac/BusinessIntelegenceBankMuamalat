		SELECT 
			o.Date AS order_date, 
			pc.CategoryName AS category_name,
			p.ProdName AS product_name,
			p.Price AS product_price, 
			o.Quantity AS order_qty,
			o.Quantity*p.Price AS total_sales,
			c.CustomerEmail AS cust_email,
			c.CustomerCIty AS cust_city
		FROM `RakaminMuamalat.Customers ` c 
		JOIN `RakaminMuamalat.Orders` o ON c.CustomerID = o.CustomerID
		JOIN `RakaminMuamalat.Products` p ON o.ProdNumber = p.ProdNumber
		JOIN `RakaminMuamalat.ProductCategory` pc ON p.Category = pc.CategoryID
		ORDER BY o.Date 
